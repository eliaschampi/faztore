{
	"name": "faztore",
	"private": true,
	"version": "1.5.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run format && npm run lint && npm run check",
		"setup": "bash database/dev/setup.sh",
		"db:init": "npx tsx database/dev/migrate.ts init",
		"db:migrate": "npx tsx database/dev/migrate.ts migrate",
		"db:rollback": "npx tsx database/dev/migrate.ts rollback",
		"db:status": "npx tsx database/dev/migrate.ts status",
		"db:create": "npx tsx database/dev/migrate.ts create",
		"db:generate": "kysely-codegen --config-file kysely.config.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.0",
		"@eslint/js": "^9.31.0",
		"@sveltejs/adapter-node": "^5.2.13",
		"@sveltejs/kit": "^2.22.5",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/bcryptjs": "^3.0.0",
		"@types/cookie": "^1.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^24.0.15",
		"@types/pg": "^8.15.4",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"kysely-codegen": "^0.18.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.36.14",
		"svelte-check": "^4.3.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0",
		"vite": "^7.0.5"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.11",
		"bcryptjs": "^3.0.2",
		"chart.js": "^4.5.0",
		"cookie": "^1.0.2",
		"daisyui": "^5.0.46",
		"express": "^5.1.0",
		"fast-csv": "^5.0.2",
		"jsonwebtoken": "^9.0.2",
		"kysely": "^0.28.3",
		"lucide-svelte": "^0.522.0",
		"pg": "^8.16.3",
		"tailwindcss": "^4.1.11"
	}
}
